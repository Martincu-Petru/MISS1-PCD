@page
<div class="container">
    <div class="row">&nbsp;</div>
    <div class="row">

    <div class="form-group">
        <label for="userInput">User</label>
        <input type="text" class="form-control" id="userInput" aria-describedby="user-help" placeholder="Enter username">
    </div>
    <div class="form-group">
        <label for="messageInput">Message</label>
        <input type="text" class="form-control" id="messageInput" placeholder="Message">
    </div>
    <div class="row">
        <button id="sendButton" type="button" class="btn btn-primary">Send Message</button>
        <button id="historyButton" type="button" class="btn btn-default">History</button>
    </div>


    </div>
    <div class="row">
        <div class="col-12">
            <hr />
        </div>
    </div>
    <div class="row">
        <div class="col-6">&nbsp;</div>
        <div class="col-6">
            <div id="messagesList" data-toggle="tooltip" data-placement="left" title="Tooltip on left"></div>
        </div>
    </div>
</div>
<script src="~/lib/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>