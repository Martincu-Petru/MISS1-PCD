@page
<div class="container">
    <div class="row">&nbsp;</div>
    <div class="row">

        <div class="form-group">
            <label for="usernameInput">User</label>
            <input type="text" class="form-control" id="usernameInput" aria-describedby="user-help" placeholder="Enter username">
        </div>
        <div class="form-group">
            <label for="messageInput">Message</label>
            <input type="text" class="form-control" id="messageInput" placeholder="Message">
        </div>
        <button id="sendButton" type="button" class="btn btn-primary" disabled="disabled">Send Message</button>

    </div>
    <div class="row">
        <div class="col-12">
            <hr />
        </div>
    </div>
    <div class="row">
        <div class="col-6">&nbsp;</div>
        <div class="col-6">
            <div id="messagesList" data-toggle="tooltip" data-placement="left" title="Tooltip on left"></div>
        </div>
    </div>
</div>
<script src="~/lib/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>